<LinkTo
    @route={{@route}}
    @models={{if @model (array @model) this.models}}
    @activeClass={{this.activeClass}}
    @query={{@query}}
    @replace={{@replace}}
    @current-when={{@currentWhen}}
    @invokeAction={{this.onClick}}
    class="dropdown-link dropdown-item"
    ...attributes
>
    {{yield}}
</LinkTo>